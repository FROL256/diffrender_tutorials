        {
            "name"   : "Launch (Debug)",
            "type"   : "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/drender",
            "args"   : ["-tests", "1"],
            "stopAtEntry": false,
            "cwd"    : "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name"   : "Launch (Release)",
