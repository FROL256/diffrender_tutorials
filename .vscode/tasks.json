{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildRelease",
            "type": "shell",
            "command": "g++ -O3 -std=c++14 2d_triangles.cpp Bitmap.cpp -Iinclude -I/usr/local/include/eigen3",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "g++ -std=c++14 2d_triangles.cpp Bitmap.cpp -g -Iinclude -I/usr/local/include/eigen3",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "BuildMSETest",
            "type": "shell",
            "command": "g++ -O3 -std=c++14 image_mse_test.cpp Bitmap.cpp -o z_mse_test",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}