    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildRelease",
            "type": "shell",
            "command": "g++ -O3 -std=c++11 2d_triangles.cpp Bitmap.cpp",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "g++ -std=c++11 2d_triangles.cpp Bitmap.cpp -g",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}